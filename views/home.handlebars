<div class="mx-10 my-10">
    <h1 class="text-2xl font-bold">
        UNiD EDGE Demo
    </h1>
    <div>
        {{#each records}}
            <div class="shadow-md rounded-md mt-10 py-8 px-8 space-y-5 bg-white">
                <div class="space-y-1">
                    <span class="font-bold block text-sm">
                        DateTime
                    </span>
                    <pre class="text-xs overflow-scroll border py-3 px-4 rounded shadow-inner">{{datetime this.createdAt }}</pre>
                </div>

                <div class="space-y-1">
                    <span class="font-bold block text-sm">
                        Data
                    </span>
                    <pre class="text-xs overflow-scroll border py-3 px-4 rounded shadow-inner">{{json this.message.credentialSubject.container}}</pre>
                </div>

                <div class="space-y-1">
                    <span class="font-bold block text-sm">
                        Verifiable Credentials
                    </span>
                    <pre class="text-xs overflow-scroll border py-3 px-4 rounded shadow-inner">{{json this.message}}</pre>
                </div>

                <div class="space-y-1">
                    <span class="font-bold block text-sm">
                        DIDComm (enc)
                    </span>
                    <pre class="text-xs overflow-scroll border py-3 px-4 rounded shadow-inner">{{json this.container}}</pre>
                </div>
            </div>
        {{/each}}
    </div>
</div>